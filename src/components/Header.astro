---
import presentation from "@/data/presentation";
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import Link from "./shared/Link.astro";
import NavItem from "@/components/NavItem.astro";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <Link
    href={`mailto:${presentation.mail}`}
    label={presentation.mail}
    isUnderline
  />

  <nav role="navigation" class="pt-4 md:pt-0">
    <ul role="list" class="flex flex-row gap-2 items-center text-center">
      <NavItem title="home" path="/"/>
      <li>/</li>
      <NavItem title="projects" path="#projects"/>
      <li>/</li>
      <NavItem title="stack" path="#stack"/>
      <li>/</li>
      <NavItem title="contact" path="#contact"/>
    </ul>
  </nav>
</header>
