---
import NavItem from "@components/NavItem.astro";
type Props = {
  id: string;
};

const { id: name } = Astro.props;
---

<nav>
  <div class="mx-auto flex flex-wrap items-center justify-between">
    <div
      class="hidden w-full items-center justify-between md:order-1 md:flex md:w-auto"
      id={name}
    >
      <ul
        class="mt-4 flex flex-col md:mt-0 md:flex-row md:space-x-8 md:text-sm md:font-medium"
      >
        <NavItem title="home" path="/" />
        <NavItem title="projects" path="#projects" />
        <NavItem title="stack" path="#stack" />
        <NavItem title="contact" path="#contact" />
      </ul>
    </div>
  </div>
</nav>
