---
import type { TailwindColor } from "src/types/tailwind";

type Props = {
  position: "bottom" | "top";
  color: TailwindColor;
};

const { position, color } = Astro.props;
---
<div
  class:list={{
    [`fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full bg-${color}-500 blur-[100px] md:blur-[125px] opacity-50`]: true,
    ["left-0 top-0"]: position === "top",
    ["right-0 bottom-0"]: position === "bottom",
  }}
>
</div>
